.chart

  & .highcharts-container
    z-index auto !important

  & .highcharts-tooltip
    z-index 1

    &__table
      line-height: 20px
      margin: 1px 0 0 1px
      border: 8px solid #fff
      border-radius: 2px
      background: #fff
      font-family: "Trebuchet MS", "Fira Sans", Arial, sans-serif
      font-size: 12px
      color: #646974

    &__header
      &--category
        color: #999
        text-transform: uppercase

      &--additional
        padding-left: 10px
        text-align: right

    &-item
      &__description
        padding-right: 15px

      &__title
        font-weight: bold
        color: #000

      &__color
        display: inline-block
        width: 9px
        height: 9px
        margin-right: 9px

      &__value
        font-weight: bold
        color: #000

        &--additional
          padding-left: 10px
          font-weight: normal
          text-align: right

        &--right
          text-align: right

      &:last-child &__description,
      &:last-child &__value
        padding-bottom: 0

    &-total
      &__description,
      &__value
        padding-top: 7px
        border-top: 1px solid #d8d8d8

      &__description
        padding-left: 18px
        padding-right: 15px
        font-weight: bold
        color: #000

      &__value
        padding-right: 7px
        font-weight: bold
        color: #000

        &--additional
          padding-right: 0
          padding-left: 10px
          text-align: right

    &__difference
      position: relative
      margin-left: 10px
      padding-left: 12px

      &:before
        content: ''
        position: absolute
        top: 50%
        left: 0
        border: 4px solid transparent

      &--negative
        color: red

        &:before
          margin-top: -3px
          border-top: 6px solid red

      &--positive
        color: green

        &:before
          margin-top: -7px
          border-bottom: 6px solid green

  &-label
    width 50px
    text-align right
    font-weight normal
    font-family "Trebuchet MS", "Fira Sans"
    color #606060

    &__value
      margin-right 3px
      font-size 12px

    &__unit
      font-size 9px

.charts-tooltip

  &__table, &
    line-height 20px
    font-family "Trebuchet MS", "Fira Sans", Arial, sans-serif !important
    font-size 12px
    color #646974

  &__value
    font-weight bold

  &__table
    border 8px solid white
    background white

  &__header
    &--category
      color #999
      text-transform uppercase

    &--additional
      padding-left 10px
      text-align right

  &-item
    &__description
      padding-right 15px

    &__title
      font-weight bold
      color #000

    &__color
      display inline-block
      width 9px
      height 9px
      margin-right 9px

    &__value
      padding-left 10px
      font-weight bold
      color #000

      &--additional
        padding-left 10px
        font-weight normal
        text-align right

      &--right
        text-align right

    &:last-child &__description,
    &:last-child &__value
      padding-bottom 0

  &-total
    &__description,
    &__value
      padding-top 7px
      border-top 1px solid #d8d8d8

    &__description
      padding-left 18px
      padding-right 15px
      font-weight bold
      color #000

    &__value
      padding-right 7px
      font-weight bold
      color #000

      &--additional
        padding-right 0
        padding-left 10px
        text-align right
